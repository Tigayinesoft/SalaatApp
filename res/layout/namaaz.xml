<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbars="vertical" android:scrollbarStyle="outsideOverlay" android:layout_height="wrap_content" android:weightSum="1.0" android:orientation="vertical">

<TextView android:id="@+id/NextNamaaz" android:layout_height="wrap_content" android:text="Next Namaaz" android:textSize="6pt" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_marginTop="5dip" android:layout_marginBottom="5dip" />

<View android:layout_width="fill_parent" android:layout_height="2dip" android:background="#FF888888"/>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollView01" android:layout_width="wrap_content" android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbars="vertical" android:scrollbarStyle="insideInset" android:layout_height="wrap_content" android:weightSum="1.0">

<RelativeLayout android:id="@+id/RelativeLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10px">

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:id="@+id/Next10Button" android:text="+10d" android:layout_alignParentRight="true" android:hapticFeedbackEnabled="true"></Button><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:id="@+id/NextButton" android:text="+1d" android:hapticFeedbackEnabled="true" android:layout_toLeftOf="@+id/Next10Button"></Button>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/Prev10Button" android:clickable="true" android:text="-10d" android:hapticFeedbackEnabled="true"></Button><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/PrevButton" android:clickable="true" android:text="-1d" android:layout_toRightOf="@+id/Prev10Button" android:hapticFeedbackEnabled="true"></Button>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Today" android:id="@+id/TodayButton" android:clickable="true" android:hapticFeedbackEnabled="true" android:layout_centerHorizontal="true"></Button>
</RelativeLayout>

<TextView android:id="@+id/MisriDayInfo" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" android:text="Misri Date" android:textSize="6pt" android:layout_marginTop="10px" android:layout_marginLeft="5px" android:layout_marginRight="5px"/>
<TextView android:id="@+id/GregDayInfo" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" android:text="Gregorian Date" android:textSize="6pt" android:layout_marginBottom="10px" android:layout_marginRight="5px" android:layout_marginLeft="5px"/>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:stretchColumns="1" android:layout_height="wrap_content" android:layout_marginBottom="5px" android:layout_marginRight="10px" android:layout_marginLeft="10px">

<TableRow>
<TextView android:id="@+id/Label0"  android:padding="3dip" android:text="Sihori" />
<TextView android:id="@+id/TimeField1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
