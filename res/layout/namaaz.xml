<TextView android:id="@+id/TimeField2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

<TableRow>
<TextView android:id="@+id/Label2" android:padding="3dip" android:text="Fajr End/Sunrise"/>
<TextView android:id="@+id/TimeField3" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

<TableRow>
