<TableRow>
<TextView android:id="@+id/Label5" android:padding="3dip" android:text="Asr End" />
<TextView android:id="@+id/TimeField6" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

<TableRow>
<TextView android:id="@+id/Label6" android:padding="3dip" android:text="Magrib" />
<TextView android:id="@+id/TimeField7" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

<TableRow>
<TextView android:id="@+id/Label7" android:padding="3dip" android:text="Isha End/Nisf ul Layl"/>
<TextView android:id="@+id/TimeField8" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

<TableRow>
<TextView android:id="@+id/Label8" android:padding="3dip" android:text="Nisf ul Layl End" />
<TextView android:id="@+id/TimeField9" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

</TableLayout>

<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dip" android:layout_marginBottom="5dip">

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LiveGPS" android:clickable="true" android:text="Live GPS Tracking" android:hapticFeedbackEnabled="true"  android:layout_centerHorizontal="true"></Button>

<TextView android:id="@+id/LiveGPSLocTV" android:text="Location: Live GPS Tracking Disabled" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/LiveGPS" android:paddingBottom="5dip" android:paddingLeft="20dip" android:paddingRight="20dip" android:paddingTop="5dip"></TextView>
<TextView android:id="@+id/LiveGPSSatTV" android:text="Satellites: Live GPS Tracking Disabled" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/LiveGPSLocTV" android:paddingBottom="5dip" android:paddingLeft="20dip" android:paddingRight="20dip" android:paddingTop="0dip"></TextView>

</RelativeLayout>

