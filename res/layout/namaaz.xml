<TextView android:id="@+id/TimeField4" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
</TableRow>

<TableRow>
<TextView android:id="@+id/Label4" android:padding="3dip" android:text="Zuhr End" />
<TextView android:id="@+id/TimeField5" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="right" />
